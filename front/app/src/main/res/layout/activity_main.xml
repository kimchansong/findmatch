<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">


    <Button
        android:id="@+id/loginButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="72dp"
        android:background="@drawable/selector"
        android:text="로그인페이지"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/MakeTeamBtn"
        app:layout_constraintEnd_toStartOf="@+id/MakeTeamBtn"
        app:layout_constraintTop_toBottomOf="@+id/connection"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/MakeTeamBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="240dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector"
        android:text="팀 생성"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintStart_toStartOf="@+id/frame"
        app:layout_constraintTop_toBottomOf="@+id/myTeamViewButton"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/myTeamViewButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"

        android:layout_marginTop="296dp"
        android:background="@drawable/selector"
        android:text="내팀보기"
        app:layout_constraintEnd_toEndOf="@+id/MakeTeamBtn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/loginButton"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

    <Button
        android:id="@+id/boardButton"
        android:layout_width="194dp"
        android:layout_height="46dp"

        android:layout_marginTop="16dp"
        android:background="@drawable/footerselector"
        android:text="게시판보기"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginButton" />

    <Button
        android:id="@+id/connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="72dp"
        android:background="@drawable/selector"
        android:text="통신하기"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/myTeamViewButton"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/MakeTeamBtn"
        app:layout_constraintTop_toTopOf="@+id/myTeamViewButton" />

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

