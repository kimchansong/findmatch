<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">


        <Button
            android:id="@+id/boardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="12dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/footerselector"
            android:text="게시판보기"
            app:layout_constraintEnd_toStartOf="@+id/button2"
            app:layout_constraintTop_toTopOf="@+id/textView4" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="72dp"
            android:background="@drawable/selector"
            android:text="로그인페이지"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintEnd_toStartOf="@+id/MakeTeamBtn"
            app:layout_constraintTop_toBottomOf="@+id/connection"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/MakeTeamBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="28dp"
            android:background="@drawable/selector"
            android:text="팀 생성"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="@+id/button"
            app:layout_constraintTop_toBottomOf="@+id/intentButton"
            app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/intentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="152dp"

        android:background="@drawable/selector"
        android:text="인텐트하기"
        app:layout_constraintBottom_toTopOf="@+id/boardButton"
        app:layout_constraintStart_toEndOf="@+id/loginButton" />

    <Button
        android:id="@+id/connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="152dp"
        android:background="@drawable/selector"
        android:text="통신하기"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/boardButton"
        app:layout_constraintEnd_toStartOf="@+id/intentButton"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/MakeTeamBtn" />

    <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <TextView
            android:id="@+id/textView4"
            android:layout_width="417dp"
            android:layout_height="134dp"
            android:background="#DBDBDB"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="44dp"
            android:text="마이페이지"
            android:background="@drawable/footerselector"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView4" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="28dp"
            android:text="팀 보기"
            android:background="@drawable/footerselector"
            app:layout_constraintEnd_toStartOf="@+id/button"
            app:layout_constraintTop_toTopOf="@+id/textView4" />

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="417dp"
        android:layout_height="250dp"
        android:layout_marginBottom="256dp"
        android:background="@color/blue"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="parent">


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/pager"
            android:layout_width="412dp"
            android:layout_height="249dp"
            android:layout_marginBottom="128dp"
            tools:context=".Activity.MainActivity"
            tools:ignore="HardcodedText">

            <TextView
                android:id="@+id/pageOne"
                style="@style/PageText"
                android:text="Page One"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="90dp" />

            <TextView
                android:id="@+id/pageTwo"
                style="@style/PageText"
                android:text="Page Two"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="90dp" />

            <TextView
                android:id="@+id/pageThree"
                style="@style/PageText"
                android:text="Page Three"
                android:textColor="@color/black"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="90dp" />

            <TextView
                android:id="@+id/pageFour"
                style="@style/PageText"
                android:text="Page Four"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="90dp" />

        </androidx.viewpager.widget.ViewPager>
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

