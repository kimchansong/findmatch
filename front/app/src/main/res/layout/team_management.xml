<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/teamName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="기아타이거즈"
        android:textSize="30dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/teamIntroTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="팀 소개"
        android:textSize="20dp"

        app:layout_constraintTop_toBottomOf="@+id/teamName"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/teamIntroContent"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="우리팀은 이러이러 합니다~~~~~~!~!~!~!~!dddddddddddddddddddddddddddddddddddddddddddddddddd"


        android:textSize="15dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/teamIntroTitle"

        app:layout_constraintLeft_toRightOf="@+id/teamIntroTitle" />

    <TextView
        android:id="@+id/teamMemberTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="104dp"
        android:text="팀원"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teamIntroTitle" />

    <TextView
        android:id="@+id/teamMemberName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="이름"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"

        app:layout_constraintTop_toTopOf="@id/teamMemberTitle"
        app:layout_constraintLeft_toRightOf="@+id/teamMemberTitle"

        />

    <TextView
        android:id="@+id/teamMemberAuthority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="권한"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"

        app:layout_constraintTop_toTopOf="@id/teamMemberTitle"
        app:layout_constraintLeft_toRightOf="@+id/teamMemberName"

        />


    <Button
        android:id="@+id/teamMemberUpdateButton"
        android:layout_width="64dp"
        android:layout_height="37dp"
        android:layout_marginLeft="52dp"

        android:text="수정"
        app:layout_constraintBaseline_toBaselineOf="@+id/teamMemberAuthority"
        app:layout_constraintLeft_toRightOf="@+id/teamMemberAuthority"
        app:layout_constraintTop_toTopOf="@id/teamMemberAuthority" />

    <Button
        android:id="@+id/team_member_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"

        android:layout_marginTop="24dp"
        android:text="삭제"
        app:layout_constraintBaseline_toBaselineOf="@+id/teamMemberAuthority"
        app:layout_constraintLeft_toRightOf="@+id/teamMemberUpdateButton"
        app:layout_constraintTop_toTopOf="@id/teamMemberAuthority" />

    <TextView
        android:id="@+id/teamRequestList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="424dp"
        android:gravity="center"
        android:text="팀 요청 리스트"

        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"

        tools:layout_editor_absoluteX="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>