<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_layout_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Activity.TeamManageActivity"
    >

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <TextView
            android:id="@+id/teamName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="팀이름"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/teamInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="80dp"
            android:text="팀소개"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ListView
            android:id="@+id/listTeamMember"
            android:layout_width="350dp"
            android:layout_height="210dp"
            android:layout_marginTop="20dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:layout_constraintStart_toStartOf="@+id/teamMember"
            app:layout_constraintTop_toBottomOf="@+id/teamMember" />

        <TextView
            android:id="@+id/teamMember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="112dp"
            android:text="팀원"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="@+id/teamInfo"
            app:layout_constraintTop_toBottomOf="@+id/teamInfo" />

        <TextView
            android:id="@+id/teamJoinRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:text="팀 가입 요청"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="@+id/listTeamMember"
            app:layout_constraintTop_toBottomOf="@+id/listTeamMember" />


        <Button
            android:id="@+id/teamDeleteBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="68dp"
            android:background="@drawable/selector"
            android:text="팀 삭제"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/listTeamJoinRequest" />

        <ListView
            android:id="@+id/listTeamJoinRequest"
            android:layout_width="350dp"
            android:layout_height="210dp"
            android:layout_marginTop="28dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:layout_constraintStart_toStartOf="@+id/teamJoinRequest"
            app:layout_constraintTop_toBottomOf="@+id/teamJoinRequest" />

        <RelativeLayout
            android:id="@+id/btn_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="900dp"
            app:layout_constraintTop_toTopOf="parent">

            <include
                android:id="@+id/top_team_manager"
                layout="@layout/activity_footer"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

</LinearLayout>